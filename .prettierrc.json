{
  "$schema": "https://json.schemastore.org/prettierrc",
  "semi": false,
  "tabWidth": 2,
  "singleQuote": true,
  "printWidth": 100,
  "singleAttributePerLine": true,
  "trailingComma": "none",
  "endOfLine": "crlf",
  "arrowParens": "avoid",
  "importOrder": [
    "^vue$",
    "<THIRD_PARTY_MODULES>",
    "<BUILTIN_MODULES>",
    "^@/(.*)$",
    "^[.]"
  ],
  "importOrderSortSpecifiers": true,
  "overrides": [
    {
      "files": "*.vue",
      "options": {
        "parser": "vue"
      }
    }
  ],
  "plugins": [
    "@trivago/prettier-plugin-sort-imports"
  ]
}